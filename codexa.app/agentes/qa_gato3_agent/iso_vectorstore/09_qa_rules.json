{
  "id": "qa_gato3_agent",
  "name": "QA GATO3 Agent",
  "version": "1.0.0",
  "type": "qa",
  "domain": "e-commerce",
  "project": "connect-my-github",
  "created": "2025-11-28",
  "author": "CODEXA System",

  "environment": {
    "production_url": "https://gatoaocubo.lovable.app",
    "staging_url": "https://staging.gatoaocubo.lovable.app",
    "local_url": "http://localhost:5173",
    "supabase_functions_url": "https://fuuguegkqnpzrrhwymgw.supabase.co/functions/v1"
  },

  "routes": [
    { "path": "/", "name": "B2C Landing", "priority": "critical" },
    { "path": "/b2b", "name": "B2B Partners", "priority": "high" },
    { "path": "/catalogo", "name": "Catalog", "priority": "critical" },
    { "path": "/produto/:slug", "name": "Product Detail", "priority": "critical" },
    { "path": "/login", "name": "Login", "priority": "medium" },
    { "path": "/admin", "name": "Admin Dashboard", "priority": "medium" },
    { "path": "/privacidade", "name": "Privacy Policy", "priority": "low" },
    { "path": "/termos", "name": "Terms of Service", "priority": "low" }
  ],

  "edge_functions": [
    { "name": "create-shopify-checkout", "type": "public", "critical": true },
    { "name": "ronronalda-chat", "type": "public", "critical": true },
    { "name": "ronronalda-recommendations", "type": "public", "critical": false },
    { "name": "ronronalda-tts", "type": "public", "critical": false },
    { "name": "fetch-from-shopify", "type": "admin", "critical": false },
    { "name": "migrate-product", "type": "admin", "critical": false },
    { "name": "sync-shopify-product", "type": "admin", "critical": false },
    { "name": "shopify-webhook-handler", "type": "webhook", "critical": false }
  ],

  "checks": {
    "pages": {
      "enabled": true,
      "timeout": 30000,
      "retries": 3
    },
    "images": {
      "enabled": true,
      "require_alt": true,
      "require_dimensions": true
    },
    "seo": {
      "enabled": true,
      "title_max_length": 60,
      "description_min_length": 50,
      "description_max_length": 160,
      "require_og_image": true,
      "require_canonical": true
    },
    "checkout": {
      "enabled": true,
      "test_product_slug": "tapete-refrescante-65x50",
      "expected_redirect": "gatoaocubo.myshopify.com"
    },
    "chat": {
      "enabled": true,
      "scenarios": [
        { "input": "Meu gato arranha o sofa", "expect_keyword": "arranhador" },
        { "input": "Gato vomitando apos comer", "expect_keyword": "comedouro" },
        { "input": "Gato estressado com mudanca", "expect_keyword": "toca" },
        { "input": "Xixi fora da caixa", "expect_keyword": "caixa" }
      ]
    },
    "forms": {
      "enabled": true,
      "test_data": {
        "name": "Teste QA",
        "email": "qa@test.gato3.com.br",
        "phone": "11999999999",
        "company": "QA Test LTDA",
        "message": "Teste automatizado - ignorar"
      }
    },
    "accessibility": {
      "enabled": true,
      "wcag_level": "AA",
      "contrast_ratio": 4.5
    },
    "performance": {
      "enabled": true,
      "lcp_threshold": 2500,
      "cls_threshold": 0.1,
      "fid_threshold": 100
    }
  },

  "tools": {
    "browser_mcp": true,
    "bash": true,
    "read_grep": true,
    "web_fetch": true
  },

  "reports": {
    "format": ["md", "json"],
    "output_dir": "reports",
    "include_screenshots": true,
    "include_recommendations": true
  },

  "thresholds": {
    "pass_rate": 0.95,
    "critical_must_pass": true
  }
}
