{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0",
  "description": "Technical specifications and requirements for each marketplace",

  "mercadolivre": {
    "nome_oficial": "Mercado Livre Brasil",
    "codigo": "mercadolivre",
    "url_base": "https://www.mercadolivre.com.br",

    "limites_tecnicos": {
      "titulo": {
        "min_caracteres": 10,
        "max_caracteres": 60,
        "recomendado": "58-60 para SEO otimizado",
        "caracteres_permitidos": "Letras, números, espaços, hífens, vírgulas",
        "caracteres_proibidos": "Símbolos especiais, emojis, HTML"
      },
      "descricao": {
        "min_caracteres": 100,
        "max_caracteres": 50000,
        "recomendado": "3000-5000 para engajamento",
        "formato": "Texto puro ou HTML básico permitido",
        "html_permitido": ["<b>", "<i>", "<u>", "<br>", "<p>"],
        "html_proibido": ["<script>", "<iframe>", "<style>", "JavaScript"]
      },
      "imagens": {
        "min_imagens": 1,
        "max_imagens": 12,
        "recomendado": "8-12 imagens",
        "dimensoes_min": "800x800px",
        "dimensoes_recomendadas": "1200x1200px ou superior",
        "formato": ["JPG", "PNG"],
        "tamanho_max_mb": 10,
        "background_recomendado": "Branco ou neutro para primeira imagem"
      },
      "video": {
        "max_videos": 1,
        "duracao_max_segundos": 60,
        "formato": ["MP4"],
        "tamanho_max_mb": 100
      }
    },

    "campos_obrigatorios": [
      "titulo",
      "categoria_id",
      "preco",
      "moeda",
      "quantidade_estoque",
      "condicao",
      "imagens"
    ],

    "campos_recomendados": [
      "ean",
      "gtin",
      "marca",
      "modelo",
      "garantia",
      "peso",
      "dimensoes",
      "atributos_tecnicos"
    ],

    "politicas_especificas": {
      "proibicoes": [
        "Links externos (redes sociais, sites próprios)",
        "Informações de contato (email, telefone, WhatsApp)",
        "Claims médicos sem comprovação",
        "Preços desatualizados ou incorretos",
        "Produtos proibidos ou restritos sem autorização",
        "Réplicas ou falsificações",
        "Violação de direitos autorais"
      ],
      "restricoes_linguagem": [
        "Não usar 'original' sem ser fabricante autorizado",
        "Não fazer comparações diretas com concorrentes",
        "Não usar superlativos absolutos sem prova",
        "Não prometer prazos de entrega que não pode cumprir"
      ]
    },

    "seo_interno": {
      "ranqueamento_fatores": [
        "Reputação do vendedor (5-10% peso)",
        "Histórico de vendas (10-15% peso)",
        "Qualidade do anúncio (15-20% peso)",
        "Preço competitivo (10-15% peso)",
        "Frete grátis / Mercado Envio (15-20% peso)",
        "Taxa de conversão (10-15% peso)"
      ],
      "otimizacoes": [
        "Usar keywords principais no título",
        "Preencher todos os atributos técnicos",
        "Usar Mercado Envio Full para melhor ranqueamento",
        "Manter estoque sempre disponível",
        "Responder perguntas em até 24h",
        "Fotos de alta qualidade profissionais"
      ]
    },

    "categorias_especiais": {
      "alimentos": {
        "exige_registro_anvisa": true,
        "validade_obrigatoria": true
      },
      "eletronicos": {
        "garantia_obrigatoria": true,
        "nota_fiscal": "recomendado"
      },
      "automotivo": {
        "compatibilidade": "obrigatório especificar",
        "ano_modelo": true
      }
    }
  },

  "shopee": {
    "nome_oficial": "Shopee Brasil",
    "codigo": "shopee",
    "url_base": "https://shopee.com.br",

    "limites_tecnicos": {
      "titulo": {
        "min_caracteres": 10,
        "max_caracteres": 120,
        "recomendado": "80-120 para mobile",
        "caracteres_permitidos": "Letras, números, espaços, alguns símbolos",
        "caracteres_proibidos": "Emojis excessivos, HTML, spam de keywords"
      },
      "descricao": {
        "min_caracteres": 100,
        "max_caracteres": 3000,
        "recomendado": "1500-2500 otimizado para mobile",
        "formato": "Texto puro",
        "html_permitido": [],
        "html_proibido": ["Qualquer HTML"]
      },
      "imagens": {
        "min_imagens": 3,
        "max_imagens": 9,
        "recomendado": "9 imagens sempre",
        "dimensoes_min": "800x800px",
        "dimensoes_recomendadas": "1000x1000px",
        "formato": ["JPG", "PNG"],
        "tamanho_max_mb": 5,
        "background_recomendado": "Branco ou lifestyle",
        "restricoes": [
          "Não usar texto em imagens excessivamente",
          "Não usar imagens de outros sellers",
          "Não usar watermarks de outras plataformas"
        ]
      },
      "video": {
        "max_videos": 1,
        "duracao_max_segundos": 60,
        "formato": ["MP4"],
        "tamanho_max_mb": 30,
        "recomendado": "15-30s vertical (9:16) para mobile"
      }
    },

    "campos_obrigatorios": [
      "titulo",
      "categoria",
      "preco",
      "estoque",
      "variacao"
    ],

    "campos_recomendados": [
      "marca",
      "modelo",
      "peso",
      "dimensoes_embalagem",
      "video_demonstracao"
    ],

    "politicas_especificas": {
      "proibicoes": [
        "Spam de keywords repetitivas no título",
        "Reenvio de anúncios removidos sem correção",
        "Uso de imagens de outros vendedores",
        "Produtos falsificados ou réplicas não autorizadas",
        "Claims de desconto falsos",
        "Direcionamento para outras plataformas"
      ],
      "restricoes_linguagem": [
        "Não repetir mesma keyword >2 vezes no título",
        "Não usar 'frete grátis' se não for verdadeiro",
        "Não fazer claims de desconto sem base real",
        "Não usar termos enganosos"
      ]
    },

    "seo_interno": {
      "ranqueamento_fatores": [
        "Performance do vendedor (10-15% peso)",
        "Taxa de resposta e envio (15-20% peso)",
        "Qualidade das imagens (10-15% peso)",
        "Preço competitivo (15-20% peso)",
        "Participação em campanhas (10-15% peso)",
        "Taxa de conversão (10-15% peso)"
      ],
      "otimizacoes": [
        "Participar de Shopee Flash Sale e campanhas",
        "Usar Shopee Garantia quando possível",
        "Responder mensagens em <12h",
        "Upload de 9 imagens sempre",
        "Vídeo de demonstração (aumenta conversão 30%)",
        "Manter rating >4.8"
      ]
    },

    "otimizacao_mobile": {
      "prioridade": "ALTA - 90% dos usuários são mobile",
      "recomendacoes": [
        "Títulos devem ser legíveis em telas pequenas",
        "Primeira imagem deve mostrar produto claramente",
        "Descrição em parágrafos curtos",
        "Vídeo vertical (9:16) preferencial",
        "CTAs claros e visíveis"
      ]
    }
  },

