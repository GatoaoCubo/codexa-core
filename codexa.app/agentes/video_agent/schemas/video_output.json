{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "video_output.json",
  "title": "Video Agent Output Schema",
  "description": "Output contract for video_agent video generation",
  "type": "object",
  "required": ["video_path", "metadata", "storyboard", "script"],
  "properties": {
    "video_path": {
      "type": "string",
      "description": "Path to final rendered video file",
      "pattern": ".*\\.mp4$",
      "examples": ["outputs/final_video.mp4", "outputs/tenis_nike_30s.mp4"]
    },
    "metadata": {
      "type": "object",
      "required": ["brief", "duration", "shots", "quality_score"],
      "properties": {
        "brief": {
          "type": "object",
          "description": "Original input brief"
        },
        "duration": {
          "type": "number",
          "description": "Actual video duration in seconds"
        },
        "shots": {
          "type": "integer",
          "description": "Number of shots in final video"
        },
        "quality_score": {
          "type": "number",
          "description": "Quality validation score (0-10)",
          "minimum": 0,
          "maximum": 10
        },
        "resolution": {
          "type": "string",
          "examples": ["1080x1920", "1920x1080", "1080x1080"]
        },
        "file_size_mb": {
          "type": "number",
          "description": "File size in megabytes"
        },
        "generation_time_seconds": {
          "type": "number",
          "description": "Total time to generate video"
        },
        "cost_usd": {
          "type": "number",
          "description": "Total cost in USD"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "storyboard": {
      "type": "object",
      "required": ["shots"],
      "properties": {
        "shots": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["number", "duration", "description", "narrative"],
            "properties": {
              "number": {
                "type": "integer",
                "minimum": 1
              },
              "duration": {
                "type": "number",
                "minimum": 2,
                "maximum": 10
              },
              "description": {
                "type": "string",
                "description": "Visual description of shot"
              },
              "composition": {
                "type": "string",
                "description": "Camera angle, lighting, movement"
              },
              "narrative": {
                "type": "string",
                "enum": ["hook", "build", "benefit", "proof", "transformation", "cta"],
                "description": "Narrative function of shot"
              },
              "runway_prompt": {
                "type": "string",
                "description": "Final prompt sent to Runway/Pika"
              },
              "clip_path": {
                "type": "string",
                "description": "Path to generated clip file"
              }
            }
          }
        },
        "total_duration": {
          "type": "number"
        },
        "narrative_arc": {
          "type": "string",
          "description": "Summary of story structure"
        }
      }
    },
    "script": {
      "type": "object",
      "required": ["narration", "music"],
      "properties": {
        "narration": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["start", "end", "text"],
            "properties": {
              "start": {
                "type": "number",
                "description": "Start time in seconds"
              },
              "end": {
                "type": "number",
                "description": "End time in seconds"
              },
              "text": {
                "type": "string",
                "description": "Narration text"
              }
            }
          }
        },
        "text_overlays": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["start", "end", "text", "position"],
            "properties": {
              "start": { "type": "number" },
              "end": { "type": "number" },
              "text": { "type": "string" },
              "position": {
                "type": "string",
                "enum": ["top", "center", "bottom"]
              },
              "style": {
                "type": "string",
                "enum": ["bold", "normal", "italic"]
              }
            }
          }
        },
        "music": {
          "type": "object",
          "required": ["track", "volume"],
          "properties": {
            "track": {
              "type": "string",
              "description": "Music file path or ID"
            },
            "volume": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Volume level (0-1)"
            },
            "fade_in": {
              "type": "number",
              "description": "Fade in duration in seconds"
            },
            "fade_out": {
              "type": "number",
              "description": "Fade out duration in seconds"
            }
          }
        },
        "narration_audio_path": {
          "type": "string",
          "description": "Path to generated TTS audio file"
        }
      }
    },
    "validation": {
      "type": "object",
      "properties": {
        "passed": {
          "type": "boolean"
        },
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 10
        },
        "checks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "passed": { "type": "boolean" },
              "message": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
