      "examples": ["CLIQUE NO LINK para baixar o PDF gratuito", "Inscreva-se AGORA e ganhe acesso"]
    }
  },

  "timestamp_requirements": {
    "min_video_duration_seconds": 180,
    "first_chapter_must_be": "00:00",
    "min_chapters_for_feature": 3,
    "min_seconds_between_chapters": 10,
    "max_chapter_title_chars": 50,
    "format_examples": ["00:00", "01:23", "12:34", "1:23:45"]
  },

  "hashtag_strategy": {
    "count": {
      "min": 3,
      "max": 5,
      "optimal": 4
    },
    "mix": {
      "broad": 1,
      "specific": 2,
      "niche": 1,
      "branded": 1
    },
    "placement": "end_of_description",
    "format": "#PascalCase",
    "notes": "First 3 hashtags appear above video title"
  },

  "integration": {
    "post_phase": "6+",
    "predecessor": "60_title_optimizer",
    "input_sources": ["$video_brief", "$title_optimizer_output"],
    "output_target": "youtube_upload_metadata",
    "standalone_command": "/youtube-description",
    "chain_next": ["62_tags_optimizer", "63_thumbnail_text"]
  },

  "section_templates": {
    "minimal": {
      "sections": ["hook", "hashtags_keywords"],
      "use_case": "shorts, clips",
      "char_range": "100-300"
    },
    "standard": {
      "sections": ["hook", "value_proposition", "links_ctas", "hashtags_keywords"],
      "use_case": "most videos",
      "char_range": "400-800"
    },
    "detailed": {
      "sections": ["hook", "value_proposition", "timestamps", "links_ctas", "hashtags_keywords"],
      "use_case": "tutorials, long-form",
      "char_range": "800-1500"
    },
    "comprehensive": {
      "sections": ["hook", "value_proposition", "prerequisites", "timestamps", "resources", "links_ctas", "hashtags_keywords"],
      "use_case": "courses, deep tutorials",
      "char_range": "1500-2500"
    }
  }
}
