      "formula": "[Keyword] + [Curiosity/Value Hook] + [Promise]",
      "char_limit": 150,
      "position": "first",
      "required": true,
      "psychology": ["pattern_interrupt", "value_preview", "curiosity_gap"],
      "triggers": ["curiosity", "value_preview", "pattern_interrupt"],
      "example_ptbr": "ChatGPT para programa√ß√£o: os 7 prompts que v√£o revolucionar seu workflow de desenvolvimento. Depois de testar 50+...",
