{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "YouTube Description Optimizer configuration with section formulas, scoring weights, and validation rules",
  "created": "2025-12-04",

  "section_formulas": {
    "hook": {
