        "Neste v√≠deo",
        "Ol√° pessoal",
        "E a√≠ galera",
        "Fala guys",
        "Bem-vindos"
      ]
    },
    "value_proposition": {
      "id": "B",
      "name": "Value Proposition",
      "purpose": "Expand on what viewer will learn/achieve",
      "formula": "[What You'll Learn] + [Why It Matters] + [Who It's For]",
      "char_limit": 300,
      "position": "after_hook",
      "required": true,
      "structure": {
        "learn_header": "üìå O QUE VOC√ä VAI APRENDER:",
        "audience_header": "üë§ PARA QUEM √â:",
        "bullet_format": "‚Ä¢"
      },
      "psychology": ["completeness", "relevance_check", "value_stacking"],
      "example_ptbr": "üìå O QUE VOC√ä VAI APRENDER:\n‚Ä¢ Prompt para debug que encontra erros em segundos\n‚Ä¢ Como pedir explica√ß√µes de c√≥digo complexo\n‚Ä¢ Template para refatora√ß√£o autom√°tica"
    },
    "timestamps": {
      "id": "C",
      "name": "Timestamps/Chapters",
      "purpose": "Enable navigation + boost watch time",
      "formula": "[MM:SS] [Chapter Title]",
      "position": "middle",
      "required": false,
      "condition": "video_duration >= 180",
      "requirements": {
        "first_timestamp": "00:00",
        "min_chapters": 3,
        "min_interval_seconds": 10,
        "max_title_chars": 50,
        "ascending_order": true
      },
      "header": "‚è±Ô∏è CAP√çTULOS:",
      "psychology": ["control", "navigation", "commitment"],
      "example_ptbr": "‚è±Ô∏è CAP√çTULOS:\n00:00 - Introdu√ß√£o\n01:45 - Prompt #1: Debug\n03:22 - Prompt #2: Explica√ß√£o"
    },
    "links_ctas": {
      "id": "D",
      "name": "Links & CTAs",
      "purpose": "Drive conversions, engagement, subscriptions",
      "formula": "[CTA] + [Organized Links]",
      "char_limit": 400,
      "position": "after_timestamps",
      "required": true,
      "structure": {
        "resources_header": "üîó LINKS MENCIONADOS:",
        "social_header": "üì± ME SIGA:",
        "subscribe_cta": "üîî Inscreva-se e ative o sininho!"
      },
      "link_priority": [
        "resources_mentioned",
        "related_videos_playlists",
        "social_media",
        "website_newsletter",
        "affiliate_sponsored"
      ],
      "max_links": 10,
      "psychology": ["reciprocity", "next_step", "community"],
      "example_ptbr": "üîó RECURSOS:\n‚Ä¢ PDF com todos os prompts: [link]\n\nüì± ME SIGA:\n‚Ä¢ GitHub: [link]\n‚Ä¢ LinkedIn: [link]"
    },
    "hashtags_keywords": {
      "id": "E",
      "name": "Hashtags & Keywords",
      "purpose": "Discoverability without keyword stuffing",
      "formula": "[Natural keyword sentence] + [3-5 hashtags]",
      "char_limit": 100,
      "position": "end",
      "required": true,
      "requirements": {
        "min_hashtags": 3,
        "max_hashtags": 5,
        "hashtag_mix": "1 broad + 2-3 specific + 1 branded"
      },
      "psychology": ["discoverability", "categorization"],
      "example_ptbr": "Este tutorial de ChatGPT para programadores faz parte da s√©rie sobre IA.\n\n#ChatGPT #Programa√ß√£o #IA #DevTips"
    }
  },

  "scoring_weights": {
    "engagement_potential": {
      "weight": 0.35,
      "description": "Predicted engagement and retention potential",
      "factors": {
        "hook_quality": {"max_points": 3.0, "description": "Compelling above-fold hook"},
        "cta_effectiveness": {"max_points": 2.0, "description": "Clear action driver"},
        "scanability": {"max_points": 2.0, "description": "Bullets, sections, formatting"},
        "value_clarity": {"max_points": 2.0, "description": "Clear promise/benefit"},
        "emotional_trigger": {"max_points": 1.0, "description": "Curiosity, urgency, etc"}
      }
    },
    "seo_alignment": {
      "weight": 0.30,
      "description": "Search engine optimization alignment",
      "factors": {
        "primary_keyword_present": {"max_points": 3.0},
        "keyword_in_first_25_words": {"max_points": 2.0},
        "secondary_keywords": {"max_points": 2.0, "per_keyword": 0.5, "max_keywords": 4},
        "keyword_density_optimal": {"max_points": 2.0, "range": "1-3%"},
        "no_keyword_stuffing": {"max_points": 1.0}
      }
    },
    "brand_alignment": {
      "weight": 0.20,
      "description": "Alignment with brand voice and title consistency",
      "factors": {
        "tone_consistency": {"max_points": 4.0, "description": "Matches title and brand voice"},
        "voice_markers": {"max_points": 3.0, "per_marker": 1.0},
        "professional_formatting": {"max_points": 2.0},
        "cta_style_match": {"max_points": 1.0}
      }
    },
    "technical_compliance": {
      "weight": 0.15,
      "description": "Technical requirements adherence",
      "factors": {
        "char_count_valid": {"max_points": 3.0, "requirement": "under 5000"},
        "above_fold_optimized": {"max_points": 2.0, "requirement": "100-150 compelling chars"},
        "timestamps_valid": {"max_points": 2.0, "requirement": "proper format if included"},
        "proper_formatting": {"max_points": 2.0},
        "mobile_friendly": {"max_points": 1.0}
      }
    }
  },

  "character_limits": {
    "total_max": 5000,
    "above_fold": 150,
    "recommended_min": 200,
    "recommended_max": 1500,
    "hook_max": 150,
    "value_prop_max": 300,
    "links_max": 400,
    "hashtags_max": 100
  },

  "length_guidelines": {
    "short_video": {
      "duration_max_minutes": 5,
      "description_chars": "300-500",
      "timestamps": false
    },
    "medium_video": {
      "duration_range_minutes": "5-15",
      "description_chars": "500-1000",
      "timestamps": true
    },
    "long_video": {
      "duration_range_minutes": "15-60",
      "description_chars": "1000-2000",
      "timestamps": true,
      "detailed_chapters": true
    },
    "tutorial_course": {
      "duration_min_minutes": 60,
      "description_chars": "1500-2500",
      "timestamps": true,
      "detailed_chapters": true,
      "resource_links": true
    }
  },

  "quality_thresholds": {
    "excellent": 9.0,
    "good": 7.5,
    "acceptable": 6.5,
    "minimum_recommend": 7.5,
    "reject_below": 6.5
  },

  "keyword_rules": {
    "density_min_percent": 1.0,
    "density_max_percent": 3.0,
    "primary_keyword_position_max_words": 25,
    "max_occurrences": 5,
    "natural_integration": true
  },

  "formatting_rules": {
    "section_dividers": ["blank_line", "‚îÅ‚îÅ‚îÅ"],
    "emoji_usage": "1-2 per section header",
    "bullet_format": "‚Ä¢",
    "timestamp_format": "MM:SS or HH:MM:SS",
    "link_format": "[Label]: [URL]",
    "line_breaks_between_sections": true
  },

  "banned_patterns": {
    "keyword_stuffing": {
      "pattern": "same keyword 5+ times",
      "description": "Unnatural keyword repetition"
    },
    "fake_urgency": {
      "pattern": "LAST CHANCE|URGENTE|ACABANDO",
      "description": "Without real deadline",
      "exception": "genuine limited offers"
    },
    "excessive_caps": {
      "pattern": "more than 2 words in ALL CAPS",
      "description": "Spam signal"
    },
    "spam_links": {
      "pattern": "more than 10 links",
      "description": "Link spam"
    },
    "wall_of_text": {
      "pattern": "500+ chars without section breaks",
      "description": "Poor scanability"
    },
    "empty_promises": {
      "examples": ["garantido", "100% certeza", "imposs√≠vel falhar"],
      "description": "Claims video can't deliver"
    }
  },

