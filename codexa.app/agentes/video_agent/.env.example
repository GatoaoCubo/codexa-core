# =============================================================================
# VIDEO_AGENT - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: LLM Provider (choose one)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# OR
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# REQUIRED: Video Generation API (at least one)
# -----------------------------------------------------------------------------
# Runway Gen-3 Alpha (Primary - recommended)
RUNWAY_API_KEY=rw_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Pika 2.0 (Fallback)
PIKA_API_KEY=pk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# OPTIONAL: Additional Video Platforms
# -----------------------------------------------------------------------------
# Google Veo 3 (for dialogue/audio)
GOOGLE_AI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI Sora 2 (for cinematography)
# Uses OPENAI_API_KEY above

# Kuaishou Kling 1.6 (budget option)
KLING_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# MiniMax Hailuo (VFX/speed)
HAILUO_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# OPTIONAL: Text-to-Speech (Narration)
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=el_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Default voice settings (pt-BR)
ELEVENLABS_DEFAULT_VOICE_ID=pMsXgVXv3BLzUgSXRplE
ELEVENLABS_MODEL_ID=eleven_multilingual_v2

# -----------------------------------------------------------------------------
# OPTIONAL: Cloud Storage (for video outputs)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_S3_BUCKET=video-agent-outputs
AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# OPTIONAL: Development/Debug Settings
# -----------------------------------------------------------------------------
# Enable debug mode (verbose logging)
VIDEO_AGENT_DEBUG=false

# Enable mock mode (no real API calls, uses placeholders)
VIDEO_AGENT_MOCK_API=false

# Log level: DEBUG, INFO, WARNING, ERROR
VIDEO_AGENT_LOG_LEVEL=INFO

# Output directory (default: ./outputs)
VIDEO_AGENT_OUTPUT_DIR=./outputs

# Max concurrent API calls
VIDEO_AGENT_MAX_CONCURRENT=5

# API timeout in seconds
VIDEO_AGENT_API_TIMEOUT=300

# -----------------------------------------------------------------------------
# OPTIONAL: Cost Controls
# -----------------------------------------------------------------------------
# Maximum cost per video (USD)
VIDEO_AGENT_MAX_COST_PER_VIDEO=5.00

# Daily cost limit (USD)
VIDEO_AGENT_DAILY_COST_LIMIT=50.00

# -----------------------------------------------------------------------------
# OPTIONAL: Quality Settings
# -----------------------------------------------------------------------------
# Minimum quality score (0-10)
VIDEO_AGENT_MIN_QUALITY_SCORE=7.0

# Minimum brand compliance score (0-10)
VIDEO_AGENT_MIN_BRAND_SCORE=8.0

# Clip success rate threshold (0-1)
VIDEO_AGENT_MIN_CLIP_SUCCESS_RATE=0.8
