  "importance_tiers": {
    "critical": { "min": 90, "max": 100, "description": "Must read - entry points and core docs" },
    "high": { "min": 70, "max": 89, "description": "Should read - important for understanding" },
    "medium": { "min": 50, "max": 69, "description": "Read if relevant - supporting files" },
    "low": { "min": 30, "max": 49, "description": "Optional - reference materials" },
    "skip": { "min": 0, "max": 29, "description": "Usually skip - assets and generated files" }
