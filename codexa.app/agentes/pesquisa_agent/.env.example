# PESQUISA AGENT v2.1 - Capabilities Configuration
# Copy to .env and configure your LLM capabilities

# REQUIRED
WEB_SEARCH=true

# OPTIONAL  
VISION=true
FILE_SEARCH=false
CODE_INTERPRETER=false

# MARKETPLACES
MARKETPLACE_PRIORITY=mercadolivre,shopee,magazineluiza,amazon_br
MIN_MARKETPLACES_PER_TERM=3

# QUALITY GATES
MIN_COMPETITORS=3
MIN_WEB_QUERIES=15
MIN_CONFIDENCE_SCORE=0.75
MAX_SUGGESTIONS_PERCENT=10

# OUTPUT
OUTPUT_DIR=user_research
GENERATE_METADATA=true
LOG_QUERIES=true

# COMPLIANCE
VALIDATE_ANVISA=true
VALIDATE_INMETRO=true
REQUIRE_RECLAMEAQUI=true
