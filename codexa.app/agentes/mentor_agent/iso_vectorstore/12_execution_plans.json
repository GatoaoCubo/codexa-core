      "description": "Complete 6-phase mentoring workflow with all validations",
      "duration_estimate": "16-31 min",
      "phases": [
        {
          "phase": 1,
          "name": "Discovery & Scout",
          "duration": "2-5min",
          "actions": [
            "Parse seller question/context",
            "Search PROCESSADOS/catalogo.json",
            "Rank results by relevance (≥0.60)",
            "Read top 3-5 knowledge files",
            "Identify knowledge gaps"
          ],
          "hop": "09_HOP_orchestrator.md",
          "validation": {
            "min_results": 3,
            "relevance_threshold": 0.60
          },
          "output": "$discovery_results"
        },
        {
          "phase": 2,
          "name": "Knowledge Synthesis",
          "duration": "3-7min",
          "actions": [
            "Extract actionable insights (WHEN/HOW/WHAT)",
            "Translate to seller language",
            "Structure by priority",
            "Add context examples",
            "Validate synthesis (≥3 insights)"
          ],
          "hop": "10_HOP_processor.md",
          "validation": {
            "min_insights": 3,
            "jargon_check": true,
            "when_how_what_complete": true
          },
          "output": "$synthesized_knowledge"
        },
        {
          "phase": 3,
          "name": "Assessment",
          "duration": "3-7min",
          "actions": [
            "Evaluate seller current state",
            "Identify skill gaps (≥2)",
            "Map opportunities by priority",
            "Assess risks",
            "Prioritize by ROI"
          ],
          "hop": "11_HOP_scout_navigator.md",
          "validation": {
            "min_skill_gaps": 2,
            "opportunities_mapped": true,
            "risks_assessed": true
          },
          "output": "$assessment_report"
        },
        {
          "phase": 4,
          "name": "Action Planning",
          "duration": "3-7min",
          "actions": [
            "Create step-by-step plan (≥5 steps)",
            "Structure by timeframe (immediate/short/long)",
            "Add prerequisites per step",
            "Include success checkpoints",
            "Provide alternatives (Plan A + Plan B)"
          ],
          "hop": "09_HOP_orchestrator.md",
          "validation": {
            "min_steps": 5,
            "timeframes_present": true,
            "prerequisites_listed": true
          },
          "output": "$action_plan"
        },
        {
          "phase": 5,
          "name": "Guidance & Resources",
          "duration": "3-7min",
          "actions": [
            "Recommend tools (≥3)",
            "Provide templates",
            "Link resources",
            "Add expert tips (≥2)",
            "Suggest next learning"
          ],
          "hop": "09_HOP_orchestrator.md",
          "validation": {
            "min_resources": 3,
            "min_expert_tips": 2
          },
          "output": "$guidance_resources"
        },
        {
          "phase": 6,
          "name": "Output Assembly",
          "duration": "2-5min",
          "actions": [
            "Structure response (summary + plan + resources + next)",
            "Format for readability",
            "Add metadata",
            "Validate completeness",
            "Save conversation log"
          ],
          "hop": "09_HOP_orchestrator.md",
          "validation": {
            "structure_complete": true,
            "metadata_present": true
          },
          "output": "$final_response"
        }
      ],
      "success_criteria": {
        "all_phases_completed": true,
        "duration_within_target": true,
        "quality_score": "≥0.87",
        "validation_failures": 0
      }
