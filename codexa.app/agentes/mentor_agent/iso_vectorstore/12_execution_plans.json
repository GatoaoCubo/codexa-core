          "module": "17_module.md",
          "validation": {
            "token_count": "800-1200",
            "template_followed": true
          },
          "output": "$synthesized_md"
        },
        {
          "phase": 4,
          "name": "Validate",
          "duration": "0.5-1min",
          "actions": [
            "Check 5 dimensions",
            "Calculate quality score",
            "Improve if <0.75",
            "Re-validate after improvement"
          ],
          "module": "16_module.md",
          "validation": {
            "quality_threshold": 0.75,
            "all_dimensions_checked": true
          },
          "output": "$validation_result"
        },
        {
          "phase": 5,
          "name": "Catalog",
          "duration": "0.5min",
          "actions": [
            "Generate filename ({categoria}_{assunto}_{date}.md)",
            "Save to PROCESSADOS/",
            "Update catalogo.json",
            "Report to seller"
          ],
          "module": "19_module.md",
          "validation": {
            "file_saved": true,
            "catalog_updated": true
          },
          "output": "$catalog_entry"
        }
      ],
      "success_criteria": {
        "file_processed": true,
        "quality_score": "≥0.75",
        "catalog_updated": true,
        "flat_structure": true
      }
