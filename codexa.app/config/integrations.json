{
  "version": "1.0.0",
  "generated_at": "2025-12-02T00:00:00Z",
  "description": "CODEXA.app integration configuration for Voice and Scout",

  "voice": {
    "enabled": true,
    "stt": {
      "provider": "whisper",
      "model": "whisper-1",
      "language": "pt-BR",
      "endpoint": "local",
      "config_path": "voice/config/stt_config.json"
    },
    "tts": {
      "provider": "elevenlabs",
      "voice_id": "codexa_narrator",
      "model": "eleven_multilingual_v2",
      "language": "pt-BR",
      "config_path": "voice/config/tts_config.json"
    },
    "daemon": {
      "host": "localhost",
      "port": 5000,
      "auto_start": false
