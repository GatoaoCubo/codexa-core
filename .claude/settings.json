{
  "mcpServers": {
    "scout": {
      "command": "node",
      "args": ["codexa.app/mcp-servers/scout-mcp/index.js"],
      "env": {
        "SCOUT_ROOT": ".",
        "NAVIGATION_MAP": "codexa.app/agentes/scout_agent/NAVIGATION_MAP.json"
      }
    },
    "codexa-commands": {
      "command": "node",
      "args": ["codexa.app/mcp-servers/codexa-commands/index.js"],
      "env": {
        "CODEXA_ROOT": ".",
        "COMMANDS_DIR": ".claude/commands"
      }
    },
    "browser": {
      "command": "node",
      "args": ["codexa.app/mcp-servers/browser-mcp/index.js"]
    },
    "voice": {
      "command": "uv",
      "args": ["run", "codexa.app/voice/server.py"],
      "env": {
        "VOICE_PORT": "5000",
        "VOICE_LANGUAGE": "pt-BR"
      }
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv",
            "args": ["run", ".claude/hooks/pre_tool_use.py"]
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv",
            "args": ["run", ".claude/hooks/pre_tool_use.py"]
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv",
            "args": ["run", ".claude/hooks/pre_tool_use.py"]
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv",
            "args": ["run", ".claude/hooks/notification.py"]
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv",
            "args": ["run", ".claude/hooks/session_stop.py"]
          }
        ]
      }
    ]
  },
  "env": {
    "CODEXA_ROOT": ".",
    "CODEXA_VOICE_NOTIFICATIONS": "false",
    "CODEXA_VOICE_GREETING": "false"
  }
}
